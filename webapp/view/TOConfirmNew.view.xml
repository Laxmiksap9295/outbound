<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="LoadingConfirmation.controller.TOConfirmNew"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>TOConfirm_HD}" showHeader="false" class="cl_page">
				<content>
					<Bar class="StatusPage">
						<contentLeft>
							<Image src="" id="id_homenew" press="onBackPress" class="cl_homeclas sapUiTinyMarginBegin sapUiTinyMarginBottom"/>
							<Text text="{i18n>TOConfirm_HD}" class="sText"></Text>
						</contentLeft>
						<contentMiddle></contentMiddle>
						<contentRight>
							<Image src="Images/login-logo@2x.png" id="id_logo" class="cl_logo sapUiTinyMarginEnd"/>
						</contentRight>
					</Bar>
					<l:Grid defaultSpan="L6 M6 S6" class="bgColorWhite removePadding removeMargin headerBorder">
						<l:content>
							<VBox>
								<VBox alignItems="Start" class="greenBackGround ">
									<Label text="{i18n>HeaderData}" class="Label_HeaderData"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>DeliveryNo} / {i18n>ReferenceNo}" class="Label_CP_B sapUiTinyMarginTop"></Label>
									<Label text="{DeliverySet>/Header/Vbeln} / {DeliverySet>/Header/Wbid}" class="Label_CP_E"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>DeliveryCreatedBy}" class="Label_CP_B sapUiTinyMarginTop "></Label>
									<Label text="{DeliverySet>/Header/Ernam}" class="Label_CP_E"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>DeliveryCreationDateTime}" class="Label_CP_B sapUiTinyMarginTop" wrapping="false"></Label>
									<Label
										text=" {path:'DeliverySet>/Header/Erdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }} {path:'DeliverySet>/Header/Erzet', formatter:'.formatTimeS'} "
										class="Label_CP_E"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>LoadingStarDatetTime}" class="Label_CP_B sapUiTinyMarginTop" wrapping="false"></Label>
									<Label
										text=" {path:'DeliverySet>/Header/Kodat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }} {path:'DeliverySet>/Header/Kouhr', formatter:'.formatTimeS'} "
										class="Label_CP_E"></Label>
								</VBox>
								<!--<VBox alignItems="End">-->
								<!--	<Button text="{i18n>BtTOCreate}" type="Emphasized" press="fnCreateTO" class="sapUiSizeCompact"-->
								<!--		visible="{=${DeliverySet>/HeaderItems/0/Tanum}=== '0000000000' ? true : false }"/>-->
								<!--</VBox>-->
								<!--<VBox alignItems="End">-->
								<!--	<Button text="{i18n>BtTOConfirm}" type="Emphasized" press="fnConfirmTO" class="sapUiSizeCompact"-->
								<!--		visible="{=${DeliverySet>/HeaderItems/0/Tanum}!== '0000000000' ? true : false }"/>-->
								<!--</VBox>-->
							</VBox>
							<VBox>
								<VBox alignItems="Start">
									<Label text="" class="Label_HeaderData_Empty "></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>ShiptoParty}" class="Label_CP_B sapUiTinyMarginTop"></Label>
									<Label text="{DeliverySet>/Header/Kunnr} - {DeliverySet>/Header/KunnrDesc}" class="Label_CP_E"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>Plant}" class="Label_CP_B sapUiTinyMarginTop"></Label>
									<Label text="{DeliverySet>/Header/Werks} - {DeliverySet>/Header/WerksDesc}" class="Label_CP_E"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>DriverName}" class="Label_CP_B sapUiTinyMarginTop"></Label>
									<Label text="{DeliverySet>/Header/Dname}" class="Label_CP_E"></Label>
								</VBox>
								<VBox alignItems="Start">
									<Label text="{i18n>TruckNumber}" class="Label_CP_B sapUiTinyMarginTop "></Label>
									<Label text="{DeliverySet>/Header/Truck}" class="Label_CP_E sapUiTinyMarginBottom"></Label>
								</VBox>
							</VBox>
						</l:content>
					</l:Grid>
					<l:Grid defaultSpan="L6 M6 S6" class="bgColorWhite removePadding removeMargin ">
						<l:content>
							<VBox>
								<VBox alignItems="Start" class="greenBackGround ">
									<Label text="{i18n>ItemsData}" class="Label_HeaderData"></Label>
								</VBox>
							</VBox>
						</l:content>
					</l:Grid>
					<l:Grid defaultSpan="L12 M12 S12" class="bgColorWhite removePadding removeMargin sapUiTinyMarginTop GridClass">
						<List class="dqcList" items="{DeliverySet>/HeaderItems}">
							<!--items="{ path : 'DeliverySet>/HeaderItems', sorter : { path : 'StrLoc', group : true, descending: false }, groupHeaderFactory: '.getGroupHeader' }">-->
							<CustomListItem type="Active"  class="subItems">
								<l:Grid defaultSpan="L12 M12 S12" class="Form_Label">
									<ObjectStatus class="Form_Label Form_Label_Wrapping sapUiSmallMarginBottom"
										state="{path:'DeliverySet>Pikmg',formatter:'LoadingConfirmation.model.formatter.fnPickingStatus'}" text="{i18n>ItemNo}: {DeliverySet>Posnr}">
										<layoutData>
											<l:GridData span="L12 M6 S12"/>
										</layoutData>
									</ObjectStatus>
									<HBox width="100%">
										<VBox width="50%">
											<Label text="{i18n>Material}: {DeliverySet>Matnr} - {DeliverySet>Maktx}" class="Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											<Label text="{i18n>DeliveryQty}: {DeliverySet>Lfimg} {DeliverySet>Vrkme}" class="Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											<Label text="{i18n>Location}: {DeliverySet>Lgort} - {DeliverySet>Lgobe}" class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											<ObjectStatus text="{i18n>Status1}: {path:'DeliverySet>ToConfirm',formatter:'LoadingConfirmation.model.formatter.fnToStatus'}"
												state="{path:'DeliverySet>ToConfirm',formatter:'LoadingConfirmation.model.formatter.fnToStatusColor'}"
												class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping" visible="{=${DeliverySet>Tanum}!== '0000000000' ? true : false }">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</ObjectStatus>
											<!--<Label text="{i18n>Status1}: {path:'DeliverySet>ToConfirm',formatter:'LoadingConfirmation.model.formatter.fnToStatus'}"-->
											<!--	class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping" visible="{=${DeliverySet>Tanum}!== '0000000000' ? true : false }">-->
											<!--	<layoutData>-->
											<!--		<l:GridData span="L12 M6 S12"/>-->
											<!--	</layoutData>-->
											<!--</Label>-->
										</VBox>
										<VBox width="50%" visible="{=${DeliverySet>Tanum}=== '0000000000' ? true : false }">
											<Button text="{i18n>BtTOCreate}" type="Emphasized" press="onItemPress" class="sapUiSizeCompact"
												visible="{=${DeliverySet>Tanum}=== '0000000000' ? true : false }"/>
												
										</VBox>
										<VBox class="sapUiMediumMarginBegin" width="60%" visible="{=${DeliverySet>Tanum}!== '0000000000' ? true : false }">
											<Label text="{i18n>TransferOrder} : {DeliverySet>Tanum} " class=" Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											<Label text="{i18n>Vfdat} : {path:'DeliverySet>Vfdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' }}"
												class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping" visible="false">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											<Label text="{i18n>Lgpla} : {DeliverySet>Lgpla} " class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											<!--<Label text="{i18n>Verme} : {DeliverySet>Verme} " class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping">-->
											<!--	<layoutData>-->
											<!--		<l:GridData span="L12 M6 S12"/>-->
											<!--	</layoutData>-->
											<!--</Label>-->
											<Label text="{i18n>Lgnum} : {DeliverySet>Lgnum} " class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											
											<Label text="{i18n>PackMat1} : {DeliverySet>Pmat1} - {i18n>Pmatqty} : {DeliverySet>Pmatno1} " class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											
											<Label text="{i18n>PackMat2} : {DeliverySet>Pmat2} - {i18n>Pmatqty} : {DeliverySet>Pmatno2}   " class="sapUiTinyMarginTop Form_Label Form_Label_Wrapping">
												<layoutData>
													<l:GridData span="L12 M6 S12"/>
												</layoutData>
											</Label>
											
										</VBox>
										<VBox class="sapUiMediumMarginBegin" width="45%" visible="{=${DeliverySet>Tanum}!== '0000000000' ? true : false }">
											<Button text="{i18n>BtTOConfirm}" type="Emphasized" press="fnCreateTO" class="sapUiSizeCompact"
												visible="{=${DeliverySet>ToConfirm}=== 'A' ? true : false}"/>
										</VBox>
									</HBox>
								</l:Grid>
							</CustomListItem>
						</List>
					</l:Grid>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>